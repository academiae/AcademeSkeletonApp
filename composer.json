{
    "name": "codingmatters/academe-skeleton-application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Gab Amba",
            "homepage": "http://www.gabbydgab.com/"
        }
    ],
    "require": {
        "php": "^7.1",
        "roave/security-advisories": "dev-master",
        "codingmatters/zend-expressive-config-provider": "~0.1",
        "codingmatters/expressive-web-component": "~0.1",
        "zendframework/zend-config-aggregator": "~0.1"
    },
    "require-dev": {
        "zendframework/zend-component-installer": "~0.5",
        "zendframework/zend-coding-standard": "^1.0",
        "zfcampus/zf-development-mode": "^3.0",        
        "sebastian/phpcpd": "^2.0.4",
        "facebook/webdriver": "^1.2",
        "phpunit/phpunit": "^5.7.4",
        "filp/whoops": "^2.1.4"        
    },
    "autoload": {
        "psr-4": {
            "Academiae\\": "src/Academiae/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Academiae\\IntegrationTest\\": "test/integration/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@install-ui-component",
            "@debug"
        ],
        "post-update-cmd": [
            "@update-ui-component",
            "@debug"
        ],
        "debug": [
            "@cs",
            "@cpd",
            "@test"
        ],
        "install-ui-component": [
            "@remove-assets",
            "bower install",
            "@copy-assets"
        ],
        "update-ui-component": [
            "@remove-assets",
            "bower update",
            "@copy-assets"
        ],
        "remove-assets": [
            "rm -rf public/assets/jquery",
            "rm -rf public/assets/jquery-ui",
            "rm -rf public/assets/font-awesome",
            "rm -rf public/assets/bootstrap"
        ],
        "copy-assets": [
            "cp -ar bower_components/jquery/dist public/assets/jquery",
            "cp -ar bower_components/jquery-ui public/assets/jquery-ui",
            "cp -ar bower_components/components-font-awesome public/assets/font-awesome",
            "cp -ar bower_components/components-bootstrap public/assets/bootstrap",
            "rm -rf bower_components"
        ],
        "cs": "phpcs --ignore=/vendor,/build config src test",
        "cs-fix": "phpcbf --ignore=/vendor,/build config src test",
        "cpd": "phpcpd --exclude=/vendor,/build --fuzzy config src test",
        "test": "phpunit --verbose",
        "development-disable": "zf-development-mode disable",
        "development-enable": "zf-development-mode enable",
        "development-status": "zf-development-mode status",
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php"
    }
}
